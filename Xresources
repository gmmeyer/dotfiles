! sets up XTerm to ensure that it is labeled correctly
*customization: -color
XTerm*termName:  xterm-256color


! login shells are cool
URxvt*loginShell: true
URxvt*termName: rxvt

! this sets the perl extensions for the keyboard
URxvt.perl-ext-common: default,clipboard,font-size
URxvt.keysym.Shift-Control-V: perl:clipboard:paste

URxvt.insecure: true

! enables the keybindings for the font size extention
! incglobal/decglobal will do this globally
! I do not want that, but I could enable it
! URxvt.keysym.C-S-Up:   perl:font-size:increase
! URxvt.keysym.C-S-Down: perl:font-size:decrease

! I should try to get djvusans mono to work
URxvt*font: xft:Ubuntu\ Mono\ derivative\ Powerline:pixelsize=20

! this will set the scrollbar on the right, not the left
! URxvt*scrollBar_right: true
URxvt*scrollBar: false

! This disables the keybindings necessary for ctrl-shift to work
URxvt.iso14755: false
URxvt.iso14755_52: false

Xft.autohint: 0

Xft.dpi: 146
Xft.lcdfilter: lcddefault
Xft.hinting: 1
Xft.hintstyle: hintfull
Xft.antialias: 1
Xft.rgba: rgb

