! URxvt*font: xft:DejaVu Sans Mono for Powerline:pixelsize=14,style=book

! this will set the scrollbar on the right, not the left
URxvt*scrollBar_right: true

! This disables the keybindings necessary for ctrl-shift to work
URxvt.iso14755: false
URxvt.iso14755_52: false

!Xft.autohint: false
Xft.dpi: 100
Xft.hinting: true
Xft.hintstyle: hintfull
Xft.antialias: rgba
