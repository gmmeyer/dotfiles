local outdated

outdated="$(npm -g outdated --parseable --depth=0 | cut -d: -f3)"

local re="^npm\@[0-9\.]+$"
regexp-replace outdated "\;+" " "

for package in ${(z)outdated}; do
  regexp-replace package "\@[0-9\.]+$" ""
  if [[ $package == ";" ]]; then
     continue;
  fi

  if [[ $package == npm ]]; then

  else
    echo "\033[1;31mUpdating $package\e[0m"
    npm -g update "$package"
  fi
done
